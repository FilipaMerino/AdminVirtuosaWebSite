<body class="login-session">
  <div class="d-flex justify-content-center my-5 sessionLogin">
    <div class="col-3 newSessionLogin">

      <div class="d-flex justify-content-center">
        <h2 class="mt-5">Log in</h2>
      </div>

      <div class="d-flex flex-column align-items-center">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, input_html: { class: "me-1" }, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">

            <div class="d-flex flex-column align-items-center">
              <%= f.button :submit, "Log in", class:"btn btn-primary" %>
              <p class="mt-3">Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
            </div>

          </div>
        <% end %>


      </div>
    </div>
  </div>
</body>
